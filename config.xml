<?xml version='1.0' encoding='utf-8'?>
<widget id="se.produktionproduktion.barnApp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>barnApp</name>
    <description>A sample Apache Cordova application that responds to the deviceready event.</description>
    <author email="info@produktionproduktion.se" href="http://produktionproduktion.se">ProduktionProduktion</author>
    <content src="index.html" />
    <access origin="*" />
    
    <preference name="AutoHideSplashScreen" value="false" />
		<preference name="FadeSplashScreen" value="true" />
		<preference name="FadeSplashScreenDuration" value="0" />
    <preference name="ShowSplashScreenSpinner" value="false" />
		
    <platform name="ios">
	    <!-- iOS 8.0+ -->
      <!-- iPhone 6 Plus  -->
      <icon src="resources/icon/ios/appicon-60@3x.png" width="180" height="180" />
      <!-- iOS 7.0+ -->
      <!-- iPhone / iPod Touch  -->
      <icon src="resources/icon/ios/appicon-60.png" width="60" height="60" />
      <icon src="resources/icon/ios/appicon-60@2x.png" width="120" height="120" />
      <!-- iPad -->
      <icon src="resources/icon/ios/appicon-76.png" width="76" height="76" />
      <icon src="resources/icon/ios/appicon-76@2x.png" width="152" height="152" />
      <!-- iOS 6.1 -->
      <!-- Spotlight Icon -->
      <icon src="resources/icon/ios/appicon-40.png" width="40" height="40" />
      <icon src="resources/icon/ios/appicon-40@2x.png" width="80" height="80" />
      <!-- iPhone / iPod Touch -->
      <icon src="resources/icon/icon.png" width="57" height="57" />
      <icon src="resources/icon/icon@2x.png" width="114" height="114" />
      <!-- iPad -->
      <icon src="resources/icon/ios/appicon-72.png" width="72" height="72" />
      <icon src="resources/icon/ios/appicon-72@2x.png" width="144" height="144" />
      <!-- iPhone Spotlight and Settings Icon -->
      <icon src="resources/icon/ios/appicon-Small.png" width="29" height="29" />
      <icon src="resources/icon/ios/appicon-Small@2x.png" width="58" height="58" />
      <!-- iPad Spotlight and Settings Icon -->
      <icon src="resources/icon/ios/appicon-50.png" width="50" height="50" />
      <icon src="resources/icon/ios/appicon-50@2x.png" width="100" height="100" />
	    
	    <splash src="resources/splash/ios/splash750x1334.png" width="750" height="1334"/>
    </platform>
    
    <preference name="AllowInlineMediaPlayback" value="true" />
    
</widget>